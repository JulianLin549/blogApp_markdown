<div class="field">
    <label for="title">Title</label>
    <input required value="<%=article.title  %> " type="text" name="title" placeholder="title" id="title">
</div>

<div class="field">
    <label for="description">Description</label>
    <textarea name=" description" id="description" cols="30" rows="10"><%= article.description  %></textarea>
</div>

<div class="field">
    <label for="Markdown">Markdown</label>
    <textarea required name=" markdown" id="markdown" cols="30" rows="10"><%= article.markdown  %></textarea>
</div>

<input class="ui violet big inverted button" type="submit" value="Submit">
<a href="/" class="ui gray big button">Cancel</a>